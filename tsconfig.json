{
  "compilerOptions": {
    "rootDir": "src",
    "module": "es6",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@src/*": ["./src/*"],
      "@components/js": ["./src/views/components/components.ts"]
    },
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}