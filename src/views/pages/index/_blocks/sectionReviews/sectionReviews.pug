mixin sectionReviews(props = {})
  - const rootClassName = "section-reviews";
  - const className = props.class || null;
  - const style = props.style || null;
  - const heading = props.heading || [];
  - const items = props.items || [];
  -
    const classes = [
      rootClassName,
      className,
      "py-96",
      "sm:py-32"
    ];

  section(
    class = classes 
    style = style
  )
    
    // Start: [container] 
    +container()
      
      // Start: [section-heading] 
      +sectionHeading({
        class: [
          "text-align-center",
          "mb-44"
        ], 
        heading: heading
      }) 
      // End: [section-heading] 

      // Start: [reviews-slider] 
      +slider({
        id: "reviews-slider", 
        class: "reviews-slider"
      })
        each item in items
          // Start: [slide] 
          +slide()

            // Start: [stack/review-item] 
            +stack({
              class: [
                "review-item", 
                "align-items-center", 
                "lg:flex-direction-column"
              ]
            })

              // Start: [review-item__photo] 
              div(
                class = [
                  "review-item__photo",
                  "lg:mb-24"
                ]
              )
                +image({
                  width: "100%",
                  height: "auto",
                  src: `user-${item.author.photoId}.webp`,
                  alt: `${item.author.name} photo`
                })
              // End: [review-item__photo] 

              // Start: [review-item__content] 
              +stack({
                class: [
                  "review-item__content", 
                  "flex-direction-column", 
                  "px-44", 
                  "lg:px-0"
                ]
              })
                +typography({
                  class: "mb-24", 
                  variant: "body-large"
                })
                  | #{item.text}
                +typography({
                  variant: "body-default", 
                  weight: "semibold"
                })
                  | #{item.author.name}
                +typography({
                  class: ["review-item__position", "mb-24"], 
                  variant: "body-small"
                })
                  | #{item.author.position}
                div()
                  img(src = require(`../../../assets/images/logo-${item.author.company}.svg`))
              // End: [review-item__content]
            // End: [stack/review-item]
          // End: [slide] 
      // End: [reviews-slider]
    // End: [container]