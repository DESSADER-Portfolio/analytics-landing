mixin sectionAnalytics(props = {})
  - const rootClassName = "section-analytics";
  - const className = props.class || null;
  - const style = props.style || null;
  - const heading = props.heading || [];
  - const items = props.items || [];
  -
    const classes = [
      rootClassName,
      className,
      "py-64",
      "sm:py-32"
    ];

  // Start: [Section: analytics] 
  section(
    class = classes 
    style = style
  )

    // Start: [Container] 
    +container()

      // Start: [Grid] 
      +grid()

        // Start: [Column 4] 
        +column({class: ["column-4", "lg:column-3", "md:column-12"]})
          +sectionHeading({class: "md:mb-24", heading: heading})
        // End: [Column 4] 

        // Start: [Column 8] 
        +column({class: ["column-8", "lg:column-9", "md:column-12"]})

          // Start: [Items] 
          div(class = `${rootClassName}__items`)
            each item in items
              +stack({
                class: [
                  "analytics-item", 
                  "flex-direction-column", 
                  "sm:px-24", 
                  "sm:py-20"
                ]
              })
                +typography({class: "mb-8", variant: "body-large", weight: "medium"})
                  | #{item.title}
                +typography({variant: "body-default"})
                  | #{item.description}
          // End: [Items] 
        // End: [Column 8] 
      // End: [Grid]  
    // End: [Container] 
  // End: [Section: analytics] 