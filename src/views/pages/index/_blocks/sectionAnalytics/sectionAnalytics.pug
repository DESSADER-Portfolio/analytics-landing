mixin sectionAnalytics(props = {})
  - const rootClassName = "section-analytics";
  - const className = props.class || null;
  - const style = props.style || null;
  - const heading = props.heading || [];
  - const items = props.items || [];
  -
    const classes = [
      rootClassName,
      className,
      "py-64",
      "sm:py-32"
    ];

  section(
    class = classes 
    style = style
  )

    // Start: [container] 
    +container()

      // Start: [grid] 
      +grid()

        // Start: [column-4] 
        +column({
          class: [
            "column-4",
            "lg:column-3",
            "md:column-12"
          ]
        })
          
          // Start: [section-heading] 
          +sectionHeading({
            class: "md:mb-24", 
            heading: heading
          })
          // End: [section-heading] 

        // End: [column-4] 

        // Start: [column-8] 
        +column({
          class: [
            "column-8",
            "lg:column-9",
            "md:column-12"
          ]
        })

          // Start: [section-analytics__items] 
          div(class = `${rootClassName}__items`)
            each item in items
              // Start: [text-card/analytics-item] 
              +textCard({
                class: [
                  "analytics-item", 
                  "sm:px-24", 
                  "sm:py-20"
                ],
                title: item.title, 
                description: item.description,
                smOutline: true
              })
              // End: [text-card/analytics-item] 
          // End: [section-analytics__items] 
        // End: [column-8] 
      // End: [grid]  
    // End: [container] 