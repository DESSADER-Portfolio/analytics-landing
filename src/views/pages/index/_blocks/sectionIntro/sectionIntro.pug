mixin sectionIntro(props = {})
  - const rootClassName = "section-intro";
  - const className = props.class || null;
  - const style = props.style || null;
  - const heading = props.heading || [];
  - const description = props.description || "";
  - const inputPlaceholder = props.inputPlaceholder || "";
  - const buttonLabel = props.buttonLabel || "";
  - const label = props.label || "";
  - const partners = props.partners || [];
  -
    const classes = [
      rootClassName,
      className,
      "pt-48",
      "sm:pt-24"
    ];

  section(
    class = classes 
    style = style
  )

    // Start: [container] 
    +container()

      // Start: [grid] 
      +grid({
        class: [
          "align-items-center",
          "justify-content-space-between"
        ]
      })

        // Start: [column-5] 
        +column({
          class: [
            "column-5",
            "lg:column-6",
            "md:column-12"
          ]
        })
          +typography({
            class: [
              `${rootClassName}__heading`,
              "mb-32",
              "sm:mb-24"
            ],
            as: "h1",
            variant: "h1"
          })
            each str in heading
              span #{str}
          +typography({
            class: [
              `${rootClassName}__description`,
              "mb-24",
              "sm:md-16"
            ], 
            variant: "body-large"
          })
            | #{description}

          // Start: [stack/section-intro__form] 
          +stack({
            class: [
              `${rootClassName}__form`,
              "mb-24",
              "sm:flex-direction-column"
            ]
          })
            // Start: [text-field/section-intro__text-field] 
            +textField({
              class: `${rootClassName}__text-field`, 
              placeholder: inputPlaceholder
            })
            // End: [text-field/section-intro__text-field] 

            // Start: [button/section-intro__button] 
            +button({
              class: `${rootClassName}__button`, 
              label: buttonLabel, 
              variant: "primary-blue",
              size: "md"
            })
            // End: [button/section-intro__button] 
          // End: [stack/section-intro__form]

          +typography({
            class: `${rootClassName}__label`,
            variant: "body-small"
          })
            | #{label}
        // End: [column-5]

        // Start: [column-6] 
        +column({
          class: [
            "column-6",
            "lg:column-6",
            "md:display-none"
          ]
        })
          +image({
            class: `${rootClassName}__image`,
            width: "100%",
            height: "auto",
            src: "illustration-1.svg",
            alt: "Intro section illustration"
          })
        // End: [column-6]  
      // End: [grid] 
    // End: [container]

    // Start: [container] 
    +container()

      // Start: [stack/section-intro__partners] 
      +stack({
        class: [
          `${rootClassName}__partners`,
          "justify-content-space-around", 
          "flex-wrap-wrap", 
          "pt-64", 
          "pb-44",
          "sm:py-24"
        ]
      })
        each item in partners
          // Start: [stack/partner-item] 
          +stack({
            class: [
              "partner-item",
              "justify-content-center",
              "align-items-center"
            ]
          })
            +image({
              width: "100%",
              height: "auto",
              src: `logo-${item}.svg`,
              alt: `${item} company logo`
            })
          // End: [stack/partner-item] 
      // End: [stack/section-intro__partners]  
    // End: [container] 