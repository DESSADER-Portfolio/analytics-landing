mixin sectionSecurity(props = {})
  - const rootClassName = "section-security";
  - const className = props.class || null;
  - const style = props.style || null;
  - const heading = props.heading || [];
  - const items = props.items || [];
  -
    const classes = [
      rootClassName,
      className,
      "py-96",
      "sm:py-32"
    ];

  // Start: [Section: security] 
  section(
    class = classes 
    style = style
  )

    // Start: [Container] 
    +container()
      +sectionHeading({
        class: "mb-32",
        heading: heading, 
        color: "light"
      })

      // Start: [Grid] 
      +grid({class: `${rootClassName}__items`})

        each item in items
          // Start: [Column 3] 
          +column({class: ["column-3", "md:column-6", "sm:column-12"]})
            // Start: [Stack: security-item]
            div(class = ["item-dot", "mb-24", "md:display-none"])
            +textCard({
              class: [
                "security-item",
                "pr-28",
                "xl:pr-0",
                "md:mb-20",
                "sm:px-24",
                "sm:py-20"
              ],
              title: item.title,
              description: item.description,
              smOutline: true
            })
            // End: [Stack: security-item] 
          // End: [Column 3] 
      // End: [Grid] 
    // End: [Container] 
  // End: [Section: security] 