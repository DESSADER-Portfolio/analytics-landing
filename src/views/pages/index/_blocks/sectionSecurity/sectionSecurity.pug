mixin sectionSecurity(props = {})
  - const rootClassName = "section-security";
  - const className = props.class || null;
  - const style = props.style || null;
  - const heading = props.heading || [];
  - const items = props.items || [];
  -
    const classes = [
      rootClassName,
      className,
      "py-96",
      "sm:py-32"
    ];

  section(
    class = classes 
    style = style
  )

    // Start: [container] 
    +container()
      
      // Start: [section-heading] 
      +sectionHeading({
        class: "mb-32",
        heading: heading, 
        color: "light"
      })
      // End: [section-heading] 

      // Start: [grid] 
      +grid({class: `${rootClassName}__items`})

        each item in items
          // Start: [column-3] 
          +column({
            class: [
              "column-3",
              "md:column-6",
              "sm:column-12"
            ]
          })
            // Start: [text-card/security-item]
            div(
              class = [
                "item-dot",
                "mb-24",
                "md:display-none"
              ]
            )
            +textCard({
              class: [
                "security-item",
                "pr-28",
                "xl:pr-0",
                "md:mb-20",
                "sm:px-24",
                "sm:py-20"
              ],
              title: item.title,
              description: item.description,
              smOutline: true
            })
            // End: [text-card/security-item] 
          // End: [column-3] 
      // End: [grid] 
    // End: [container] 