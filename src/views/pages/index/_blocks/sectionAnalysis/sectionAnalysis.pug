mixin sectionAnalysis(props = {})
  - const rootClassName = "section-analysis";
  - const className = props.class || null;
  - const style = props.style || null;
  - const heading = props.heading || [];
  - const description = props.description || "";
  - const buttonLabel = props.buttonLabel || "";
  - const items = props.items || [];
  -
    const classes = [
      rootClassName,
      className,
      "py-96",
      "sm:py-32"
    ];

  section(
    class = classes 
    style = style
  )

    // Start: [container] 
    +container()

      // Start: [grid] 
      +grid({
        class: [
          "align-items-center", 
          "lg:flex-direction-column-reverse",
          "lg:align-items-flex-start"
        ]
      })

        // Start: [column-6] 
        +column({
          class: [
            "column-6",
            "lg:column-8",
            "md:column-12"
          ]
        }) 
          
          // Start: [section-heading] 
          +sectionHeading({
            class: "mb-24",
            heading: heading,
            description: description
          })
          // End: [section-heading] 

          // Start: [button] 
          +button({
            class: [
              `${rootClassName}__button`,
              "mb-44",
              "sm:mb-24"
            ],
            label: buttonLabel, 
            variant: "primary-blue",
            size: "md",
            icon: "arrow-right"
          })
          // End: [button] 
          
          // Start: [stack/section-analysis__items] 
          +stack({
            class: [
              `${rootClassName}__items`, 
              "sm:flex-direction-column"
            ]
          })
            each item in items
              // Start: [text-card/analysis-item]
              +textCard({
                class: [
                  "analysis-item",
                  "sm:px-24",
                  "sm:py-20"
                ],
                title: item.title,
                description: item.description,
                smOutline: true
              }) 
              // End: [text-card/analysis-item]
          // End: [stack/section-analysis__items] 
        // End: [column-6]

        // Start: [column-6] 
        +column({
          class: [
            "column-6",
            "lg:column-12"
          ]
        })
          +image({
            class: [`${rootClassName}__image`, "lg:mb-24"],
            width: "100%",
            height: "auto",
            src: "chart.webp",
            alt: "Chart preview"
          })
        // End: [column-6] 
      // End: [grid] 
    // End: [container] 