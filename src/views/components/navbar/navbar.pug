include nav/nav.pug

mixin navbar(props = {})
  - const rootClassName = "navbar";
  - const className = props.class || null;
  - const style = props.style || null;
  - const menuItems = props.menuItems || [];
  - const extraItems = props.extraItems || [];
  -
    const classes = [
      rootClassName,
      className
    ];

  nav(
    class = classes 
    style = style
  )
      
    // Start: [Stack]
    +stack({class: ["justify-content-space-between", "align-items-center", "px-20"]})
      +logo()

      // Start: [Menu] 
      div(class = [
        "menu", 
        "display-flex", 
        "align-items-center",
        "md:align-items-flex-start",
        "md:px-20"
      ])
        +nav({
          class: [
            "ml-auto", 
            "md:ml-0", 
            "md:flex-direction-column",
            "md:mb-24"
          ], 
          items: menuItems
        })
        div(class = [
          "extra", 
          "display-flex", 
          "ml-auto",
          "md:ml-0"
        ])
          each item in extraItems
            +button({label: item.label, variant: item.variant})

      // End: [Menu]

      button(class = "menu-control")
        span
        span
        span  
    
    // End: [Stack] 