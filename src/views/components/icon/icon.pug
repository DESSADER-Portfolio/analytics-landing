mixin icon(props = {})
  - const rootClassName = "icon";
  - const className = props.class || null;
  - const style = props.style || null;
  - const size = props.size || null;
  - const icon = props.icon || "";
  - const sizeStyle = size ? `width: ${size}px; height: ${size}px` : null;
  -
    const classes = [
      rootClassName,
      {[`${rootClassName}:${icon}`]: icon},
      className
    ];

  span(
    class = classes 
    style = style
  )
    svg(
      class = `${rootClassName}__svg`
      viewbox ="0 0 32 32"
      style = sizeStyle
    )
      use(xlink:href=`assets/images/icons.svg#${icon}`)