mixin image(props = {})
  - const rootClassName = "image";
  - const className = props.class || null;
  - const style = props.style || null;
  - const width = props.width || "100%";
  - const height = props.height || "100%";
  - const alt = props.alt || "Image";
  - const src = props.src || "";
  - const lazy = props.lazy || false;
  -
    const classes = [
      rootClassName,
      className
    ];

  img(
    class = classes
    style = style
    width = width
    height = height
    alt = alt
    data-lazy-img = lazy
    data-src = lazy ? require(`../../../assets/images/${src}`) : null
    src = lazy ? null : require(`../../../assets/images/${src}`)
  )