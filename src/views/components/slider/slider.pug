include slide/slide.pug

mixin slider(props = {})
  - const rootClassName = "slider";
  - const className = props.class || null;
  - const id = props.id || null;
  - const style = props.style || null;
  - const navigation = props.navigation ?? true;
  - const pagination = props.pagination ?? true;
  -
    const classes = [
      rootClassName,
      className
    ];

  div(
    class = classes
    style = style
  )
    div(
      class = [
        `${rootClassName}__main`,
        "display-flex", 
        "align-items-center",
        "mb-64",
        "px-80",
        "sm:flex-direction-column",
        "sm:px-0",
        "sm:mb-44"
      ]
    )
      div(
        class = [
          `${rootClassName}__track`, 
          "swiper", 
          "sm:mb-24"
        ] 
        id = id
      )
        div(class = "swiper-wrapper")
          block

      if navigation
        +stack({
          class: [
            `${rootClassName}__navigation`,
            "sm:justify-content-center"
          ]
        })
          +button({
            class: [`${rootClassName}__nav-button`, "button-prev"],
            size: "md",
            icon: "chevron-left"
          })

          +button({
            class: [`${rootClassName}__nav-button`, "button-next"],
            size: "md",
            icon: "chevron-right"
          })

    if pagination
      +stack({
        class: [
          `${rootClassName}__pagination`,
          "justify-content-center"
        ]
      })