include slide/slide.pug

mixin slider(props = {})
  - const rootClassName = "slider";
  - const className = props.class || null;
  - const style = props.style || null;
  -
    const classes = [
      rootClassName,
      className
    ];

  div(
    class = classes 
    style = style
  )
    div(class = "swiper")
      div(class = "swiper-wrapper")
        block

    +button({class: ["nav-button", "button-prev"], icon: "chevron-left"})
    +button({class: ["nav-button", "button-next"], icon: "chevron-right"})

    div(class = ["swiper-pagination", "display-flex", "justify-content-center"])
