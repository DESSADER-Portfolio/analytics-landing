mixin textCard(props = {})
  - const rootClassName = "text-card";
  - const className = props.class || null;
  - const style = props.style || null;
  - const title = props.title || "";
  - const description = props.description || "";
  - const smOutline = props.smOutline || false;
  -
    const classes = [
      rootClassName,
      {[`${rootClassName}:sm-outline`]: smOutline},
      className
    ];

  div(
    class = classes 
    style = style
  )
    +typography({
      class: [
        `${rootClassName}__title`,
        "mb-8"
      ], 
      variant: "body-large", 
      weight: "medium"
    })
      | #{title}
    +typography({
      class: `${rootClassName}__description`,
      variant: "body-default"
    })
      | #{description}